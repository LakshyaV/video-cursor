# Professional Video Editor - Environment Configuration
# Copy this file to .env and add your API keys

# ===========================================
# AI SERVICE API KEYS
# ===========================================

# Cohere AI API Key for natural language processing
# Get your key at: https://dashboard.cohere.ai/
COHERE_API_KEY=your_cohere_api_key_here

# TwelveLabs API Key for video understanding and search
# Get your key at: https://playground.twelvelabs.io/
api_key_1=your_twelvelabs_api_key_here

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Custom upload directory (default: uploads)
UPLOAD_DIR=uploads

# Custom output directory (default: outputs)
OUTPUT_DIR=outputs

# Maximum file size in MB (default: 500MB)
MAX_FILE_SIZE_MB=500

# Server configuration
HOST=0.0.0.0
PORT=8000

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable AI features
ENABLE_AI_EDITING=true
ENABLE_OBJECT_DETECTION=true
ENABLE_TRANSCRIPTION=true

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# FFmpeg quality settings
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac
DEFAULT_QUALITY=23

# Processing limits
MAX_CONCURRENT_JOBS=4
PROCESSING_TIMEOUT=3600

